<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.decimals.stuhub.AboutActivity">

    <include
        android:id="@+id/about_page_toolbar"
        layout="@layout/app_bar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_bar"
        android:layout_below="@id/about_page_toolbar"
        android:background="@drawable/background"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/stuhub" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:padding="4dp">

            <RelativeLayout
                android:id="@+id/rl121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/appInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="Stuhub is a Student's Board that provides a platform to students to share relevant information that can be categorized into various sections. Stuhub lets its user access all academic related information at their fingertips on a simple and easy to use interface."
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/appInfo"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/developers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Developers"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/developers_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/developers"
                    android:text="1.Adarsh Anurag \n 2.Shubham Kumar \n3.Sunil Kumar Keshri"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/developers_name"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/systemDesigners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="System Designers"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/designers_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/systemDesigners"
                    android:text="1.Anmol Gangwal \n 2.Vivek Agrawal"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/designers_name"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/analysts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl3"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Analysts"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/analysts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/analysts"

                    android:text="1.Adarsh Anurag \n 2.Shubham Kumar \n 3.Vivek Agarwal"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/analysts_name"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/testers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl4"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Testers"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/testers_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/testers"
                    android:text="1.Saroj Kumar \n 2.Saurav Kumar Sahil"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/testers_name"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/maintenanceTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl5"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Maintenance Team"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/maintenanceTeam_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maintenanceTeam"
                    android:text="1.Anurag Shubham \n 2.Sourabh Kumar"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl6"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/maintenanceTeam_name"
                    android:layout_margin="2dp"
                    android:background="#000" />

                <RelativeLayout
                    android:id="@+id/rl7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl6">

                    <TextView
                        android:id="@+id/decimalTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:text="Team Decimal"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl7"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="8dp"
                        android:onClick="sendEmail"
                        android:src="@drawable/email_image" />

                    <ImageView
                        android:id="@+id/fb_icon"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/email_icon"
                        android:onClick="openFbPage"
                        android:src="@drawable/fb_image" />
                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>


    <include
        android:id="@+id/bottom_nav_bar"
        layout="@layout/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
